<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <!--//Pengerjaan : 28 April - 9 Mei 2022
    //Nim : 10119241
    //Nama : Ahmad Fahmi Fahlevi
    //Kelas : IF6    <-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bckg3"
        android:orientation="vertical"

        >

        <include layout="@layout/main_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/styleicon"
                        android:backgroundTint="@color/PrimaryT">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_marginTop="50dp"
                            android:src="@drawable/myimage" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/image"
                            android:layout_marginTop="1dp"
                            android:fontFamily="@font/bold"
                            android:text="Ahmad Fahmi F."
                            android:textAlignment="center"
                            android:textColor="@color/Icon"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/name"
                            android:layout_margin="5dp"
                            android:layout_marginTop="22dp"
                            android:fontFamily="@font/regular"
                            android:text="10119241   IF-6 Universitas Komputer Indonesia"
                            android:textAlignment="center"
                            android:textColor="@color/Photo"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/styleicon"
                        android:backgroundTint="@color/PrimaryT"
                        >
                        <TextView
                            android:id="@+id/Contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:layout_marginTop="50dp"
                            android:layout_centerHorizontal="true"
                            android:text="Contact Me"
                            android:textAlignment="center"
                            android:textColor="@color/Icon"
                            android:textSize="20sp" />
                        <Button
                            android:id="@+id/btn_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:layout_below="@id/Contact"
                            android:text="Email"
                            android:onClick="onButtonTap"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:background="@drawable/onboarding_indicator_active"/>
                        <Button
                            android:id="@+id/btn_instagram"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:layout_below="@id/btn_email"
                            android:text="Instagram"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:background="@drawable/onboarding_indicator_active"/>
                        <Button
                            android:id="@+id/btn_callme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:layout_below="@id/btn_instagram"
                            android:text="Call Me"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:background="@drawable/onboarding_indicator_active"
                            android:onClick="callClick"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/styleicon"
                        android:backgroundTint="@color/PrimaryT">
                        <ImageView
                            android:id="@+id/address"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="40dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_location" />

                        <TextView
                            android:layout_below="@id/address"
                            android:id="@+id/Findme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:layout_marginTop="50dp"
                            android:layout_centerHorizontal="true"
                            android:text="Find Me"
                            android:textAlignment="center"
                            android:textColor="@color/Icon"
                            android:textSize="20sp"/>
                        <Button
                            android:id="@+id/btn_findme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:layout_below="@id/Findme"
                            android:text="Click Me"
                            android:textAllCaps="false"
                            android:textColor="@color/Icon"
                            android:background="@drawable/onboarding_indicator_active"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/styleicon"
                        android:backgroundTint="@color/PrimaryT"
                        >

                        <ImageView
                            android:id="@+id/imgabout"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="40dp"
                            android:scaleType="center"
                            android:src="@drawable/logo8" />

                        <TextView
                            android:layout_below="@id/imgabout"
                            android:id="@+id/About"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:layout_marginTop="50dp"
                            android:layout_centerHorizontal="true"
                            android:text="About Apps"
                            android:textAlignment="center"
                            android:textColor="@color/Icon"
                            android:textSize="20sp"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/About"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/onboarding_indicator_active"
                            android:backgroundTint="@color/Icon"
                            android:onClick="ClickAbout"
                            android:text="Click Me"
                            android:textAllCaps="false"
                            android:textColor="@color/Primary" />

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/Text">

        <include layout="@layout/main_nav_drawer" />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>