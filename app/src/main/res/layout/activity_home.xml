<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bckg3"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar" />

        <RelativeLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/styleicon"
            android:backgroundTint="@color/PrimaryT"
            android:padding="18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/potoprofile"

                android:fontFamily="@font/bold"
                android:text="Profile"
                android:textAlignment="gravity"
                android:textColor="@color/Icon"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/potoprofile"
                android:fontFamily="@font/regular"
                android:text="Hai, nama saya Ahmad Fahmi Fahlevi, saya berkuliah di UNIKOM jurusan Teknik Informatika"
                android:textAlignment="gravity"
                android:textColor="@color/white"

                android:textSize="15sp" />

            <ImageView
                android:id="@+id/potoprofile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:layout_marginRight="20dp"
                android:src="@drawable/myimage" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/interest"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/styleicon"
            android:backgroundTint="@color/PrimaryT"
            android:padding="20dp">

            <TextView
                android:id="@+id/home_hobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Hobby"
                android:textColor="@color/Icon"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/home_hobby_music"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/home_hobby"
                android:layout_marginTop="20dp"
                android:src="@drawable/music" />

            <ImageView
                android:id="@+id/home_hobby_game"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/home_hobby"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/home_hobby_music"
                android:src="@drawable/game" />

            <ImageView
                android:id="@id/home_hobby_motor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/home_hobby"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/home_hobby_game"
                android:src="@drawable/motor" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/home_hobby"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/home_hobby_motor"
                android:src="@drawable/makan" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/foodDrink"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/styleicon"
            android:backgroundTint="@color/PrimaryT"
            android:padding="20dp">

            <TextView
                android:id="@+id/home_hobby_foodDrink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Food and Drink"
                android:textColor="@color/Icon"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/home_hobby_nasgor"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_below="@id/home_hobby_foodDrink"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/regular"
                android:text="Nasi goreng"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/home_hobby_ayam"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_below="@id/home_hobby_foodDrink"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/home_hobby_nasgor"
                android:fontFamily="@font/regular"
                android:text="Ayam Bakar"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/home_hobby_jusalpukat"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_below="@id/home_hobby_foodDrink"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/home_hobby_ayam"
                android:fontFamily="@font/regular"
                android:text="Jus Alpukat"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/interestCitacita"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/styleicon"
            android:backgroundTint="@color/PrimaryT"
            android:padding="16sp">

            <TextView
                android:id="@+id/home_hobby_citacita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Interest and Cita-cita"
                android:textColor="@color/Icon"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/home_hobby_data"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_below="@id/home_hobby_citacita"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/regular"
                android:text="Data Analis"
                android:textColor="@color/Photo"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/home_hobby_web"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_below="@id/home_hobby_citacita"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/home_hobby_data"
                android:fontFamily="@font/regular"
                android:text="Web Developer"
                android:textColor="@color/Photo"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/home_hobby_citacitaku"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_below="@id/home_hobby_citacita"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/home_hobby_web"
                android:fontFamily="@font/regular"
                android:text="Entrepreneur"
                android:textAlignment="center"
                android:textColor="@color/Photo"
                android:textSize="18sp" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/Text">

        <include layout="@layout/main_nav_drawer" />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>